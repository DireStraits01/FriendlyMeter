@page "/"
@using System.Threading.Tasks
@using FriendlyMeter.Client.Services.Interfaces
@using FriendlyMeter.Shared.Dtos
@using FriendlyMeter.Shared.Models
@using System.Runtime.InteropServices

@inject IJSRuntime JS
@inject IUserService UserService
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FriendlyMeter - Sign In / Register</title>
</head>

<div class="container">
    <!-- Left Side - Branding -->
    <div class="left-side">
        <h1>Управляйте<br>недвижимостью</h1>
        <p class="tagline">Отслеживайте счётчики, управляйте арендаторами, упрощайте расчёты</p>
        <div class="mockup"></div>
    </div>

    <!-- Right Side - Forms -->
    <div class="right-side">
        <div class="logo">RentMeter</div>

        <!-- Tab Switcher -->
        <div class="tab-switcher">
            <button class="tab-button @(showLoginTab ? "active" : "")" @onclick='()=> switchTab("login")''>Вход</button>
            <button class="tab-button @(!showLoginTab ? "active" : "")" @onclick='()=> switchTab("register")''>Регистрация</button>
        </div>

        <div class="form-container">
            <!-- Login Form -->
            <div id="login-form" class="form-content @(showLoginTab ? "active" : "")" >
                <form onsubmit="handleLogin(event)">
                    <div class="form-group">
                        <input type="email" id="login-email" placeholder="Email или имя пользователя" required>
                    </div>
                    <div class="form-group">
                        <input type="password" id="login-password" placeholder="Пароль" required>
                    </div>
                    <div class="forgot-password">
                        <a href="#">Забыли пароль?</a>
                    </div>
                    <button type="submit" class="submit-btn">Войти</button>
                </form>
                <div id="login-message" class="message"></div>
            </div>

            <!-- Registration Form -->
            <div id="register-form" class="form-content @(!showLoginTab ? "active" : "")">
                <form onsubmit="handleRegister(event)">
                    <div class="form-group">
                        <input type="text" id="register-name" placeholder="Полное имя" @bind="_userName" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="register-phone" placeholder="Номер телефона" @bind="_phoneNumber" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="register-email" placeholder="Email" @bind="_email">
                    </div>
                    <div class="form-group">
                        <input type="password" id="register-password" placeholder="Пароль" @bind='_password' required>
                    </div>
                    <button type="button" class="submit-btn" @onclick="Register">Создать аккаунт</button>
                </form>
                <div id="register-message" class="message"></div>
            </div>
        </div>
    </div>
</div>

@code {

    private string? _userName {get; set;} 
    private string? _phoneNumber {get; set;} 
    private string? _email {get; set;}
    private string? _password {get; set;}  
    private bool showLoginTab = true;

    private void switchTab(string tab)
    {
       showLoginTab = tab == "login";
    }

    private async Task<UserDto>  Register()
        
    {
        UserDto user = new UserDto (_userName,null, _phoneNumber, _email, _password, null);
        Console.WriteLine($"REGISTER TABB {user.Name}");
        if (user != null)
        {
            await UserService.UserRegister(user);
        }
        
        
        return user;
    }

    private void Message (string text)
    {
        Console.WriteLine($"REGISTER TABB {text}");
    }
}

